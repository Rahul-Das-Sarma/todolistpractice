<%- include("header"); -%>

<div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
</div>
<div class="box">

<% newListItem.forEach(function(item){ %>
    <form action="/delete" method="POST">
            <div class="item">  
        <input type="checkbox" name="checkbox" value="<%= item._id %>" onclick="this.form.submit()">
           <p> <%= item.name %> </p>
            </div>
            <input type="hidden" value="<%= listTitle %>" name="listName">
        </form>

<% }) %>

   
<form class="item" action="/" method="POST">
    <input type="text" name="newName" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value= <%= listTitle %>>+</button>
    </form>
</div>

    

<%- include("footer"); -%>